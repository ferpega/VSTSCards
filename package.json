{
    "name": "vsts-cards",
    "description": "Extract tasks from a VSTS backlog and print them",
    "author": "Eder Elorriaga <gexplorer8@gmail.com>",
    "scripts": {
        "prelibs": "mkdirp dist/libs",
        "libs": "run-p libs:bulma libs:fontscss libs:fonts libs:jquery",
        "libs:bulma": "cp -r node_modules/bulma/css/bulma.css -t dist/libs",
        "libs:fontscss": "cp -r node_modules/font-awesome/css/font-awesome.min.css -t dist/libs",
        "libs:fonts": "cp -r node_modules/font-awesome/fonts -t dist",
        "libs:jquery": "cp -r node_modules/jquery/dist/jquery.min.js -t dist/libs",
        
        "prebuild": "mkdirp dist/scripts",
        "build": "run-p libs build:copy build:app build:content build:background",

        "prebuild:watch": "mkdirp dist/scripts",
        "build:watch": "run-p libs build:copy build:app:watch build:content:watch build:background:watch",

        "build:copy": "cp src/*.* -t dist",

        "build:app": "cross-env NODE_ENV=production browserify -g envify src/app/main.js | uglifyjs -c warnings=false -m > dist/scripts/build.js",
        "build:app:watch": "watchify src/app/main.js -o dist/scripts/build.js",

        "build:content": "cross-env NODE_ENV=production browserify -g envify src/scripts/content.js | uglifyjs -c warnings=false -m > dist/scripts/content.js",
        "build:content:watch": "watchify src/scripts/content.js -o dist/scripts/content.js",
        
        "build:background": "cross-env NODE_ENV=production browserify -g envify src/scripts/background.js | uglifyjs -c warnings=false -m > dist/scripts/background.js",
        "build:background:watch": "watchify src/scripts/background.js -o dist/scripts/background.js",

        "prepack": "npm run build",
        "pack": "crx pack dist -p vsts-cards.pem -o vsts-cards.crx"
    },
    "dependencies": {
        "vue": "^2.0.1"
    },
    "devDependencies": {
        "babel-core": "^6.0.0",
        "babel-preset-es2015": "^6.0.0",
        "babelify": "^7.2.0",
        "browserify": "^13.0.1",
        "browserify-hmr": "^0.3.1",
        "bulma": "^0.6.1",
        "cross-env": "^1.0.6",
        "crx": "^3.2.1",
        "envify": "^3.4.1",
        "font-awesome": "^4.7.0",
        "http-server": "^0.9.0",
        "jquery": "^3.2.1",
        "node-sass": "^4.7.2",
        "npm-run-all": "^2.1.2",
        "sass-loader": "^6.0.6",
        "style-loader": "^0.19.0",
        "uglify-js": "^2.5.0",
        "vueify": "^9.1.0",
        "watch": "^1.0.2",
        "watchify": "^3.9.0"
    },
    "browserify": {
        "transform": [
            "vueify",
            "babelify"
        ]
    },
    "browser": {
        "vue": "vue/dist/vue.common.js"
    }
}
