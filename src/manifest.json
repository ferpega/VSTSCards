{
    "name": "Print VSTS cards",
    "description": "Extract tasks from a VSTS backlog and print them",
    "author": "Eder Elorriaga <gexplorer8@gmail.com>",
    "version": "3.0.0",
    "icons": {
        "16": "postits.png",
        "48": "postits.png",
        "128": "postits.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "declarativeContent"
    ],
    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    },
    "page_action": {
        "default_title": "Print VSTS cards",
        "default_icon": "postits.png"
    },
    "manifest_version": 2
}